<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.addproduct.AddProductFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

         <ImageView
             android:id="@+id/img_product"
             android:layout_width="@dimen/_80sdp"
             android:layout_height="@dimen/_80sdp"
             android:layout_marginStart="@dimen/_16sdp"
             android:layout_marginTop="@dimen/_16sdp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             tools:src="@drawable/ic_baseline_photo_24"/>

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_16sdp"
            app:layout_constraintStart_toEndOf="@+id/img_product"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/robotocondensed_regular"
            tools:text="aqua original"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_16sdp"
            app:layout_constraintStart_toEndOf="@id/img_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
            android:text="@string/jumlah"
            android:textColor="@color/black"
            android:fontFamily="@font/robotocondensed_regular"
            android:textSize="@dimen/_14ssp"/>
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_16sdp"
            app:layout_constraintStart_toEndOf="@id/img_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_amount"
            android:text="@string/total"
            android:textColor="@color/black"
            android:fontFamily="@font/robotocondensed_regular"
            android:textSize="@dimen/_14ssp"/>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:background="@android:color/transparent"
            android:theme="@style/buttonblackicon"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_amount"/>

        <TextView
            android:id="@+id/tv_amount_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:layout_marginEnd="@dimen/_6sdp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_add"
            app:layout_constraintTop_toTopOf="@+id/btn_add"
            app:layout_constraintEnd_toStartOf="@id/btn_add"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/robotocondensed_regular"
            android:textAlignment="center"
            tools:text="10"/>

        <Button
            android:id="@+id/btn_substract"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:theme="@style/buttonblackicon"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="@id/tv_amount_product"
            app:layout_constraintBottom_toBottomOf="@id/tv_amount_product"
            app:layout_constraintEnd_toStartOf="@id/tv_amount_product"
            android:background="@android:color/transparent"
            app:icon="@drawable/ic_substract"
            app:iconGravity="textStart"
            app:iconPadding="0dp"/>

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_total"
            app:layout_constraintTop_toBottomOf="@+id/tv_amount_product"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/robotocondensed_regular"
            android:textColor="@color/black"
            tools:text="1000"/>

        <Button
            android:id="@+id/btn_add_to_chart"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btn_scan_again"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/robotocondensed_regular"
            android:text="@string/add_to_cart"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_scan_again"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/robotocondensed_regular"
            android:text="@string/scan_again"
            android:textAllCaps="false"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>